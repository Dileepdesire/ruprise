<div class="container">
	<div class="navbar">
	<h3>My Products</h3>
	<div class="navbar-right"> <a href="/product/new" class="btn btn-sm">Add New Product</a> </div>
	</div>

	<table class='table'>
		<tr>
			<th>Product Image</th>
			<th>Product Name</th>
			<th>Description</th>
			<th>Price</th>
			<th>Featured</th>
			<th colspan=3>Actions</th>
			
		</tr>

		<% _.each(product,function(product){ %>
		<tr data-id="<%= product.id %>" data-model="product">
			<th><a href="/images/uploads/<%- product.prod_image %>"><img src ="/images/uploads/thumbs/<%- product.prod_image %>" class="img-thumbnail large pull-right" ></a></th>
			<th><%= product.prod_name %></th>
			<th><%= product.prod_desc %></th>
			<th><%= product.prod_base_price %></th>
			<% if(product.feature) { %>
				<th>Featured</th>
			<% } else { %>
				<th>Not Featured</th>
			<% } %>


			<th><a href="/product/show/<%= product.id %>" class="btn btn-sm btn-primary">Details</a></th>
			<th><a href="/product/edit/<%= product.id %>" class="btn btn-sm btn-warning">Edit</a></th>
			
			<th>
				<form action="/product/destroy/<%= product.id %>" method="POST">
					<input type="hidden" name="_method" value="delete"/>
					<input type="submit" class="btn btn-sm btn-danger" value="Delete"/> 
					<input type="hidden" name="_csrf" value="<%= _csrf %>"/> 
				</form>

			</th>
			
		</tr>

		<% }) %>

	</table>
</div>